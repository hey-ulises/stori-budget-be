generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          Int           @id @default(autoincrement())
  name        String
  type        String        // "income" | "expense"
  transactions Transaction[]
}

model Transaction {
  id          Int       @id @default(autoincrement())
  date        DateTime
  amount      Float
  description String?
  categoryId  Int
  category    Category  @relation(fields: [categoryId], references: [id])
}
